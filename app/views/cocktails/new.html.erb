<div class='container'>
  <%=simple_form_for(@cocktail) do |f|%>
    <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.input :name, class: "form-control input" %>
    </div>
    <div class="form-group">
      <%= f.input :photo, class: "form-control input" %>
      <%= f.input :photo_cache, as: :hidden, class: "form-control input" %>
    </div>

    <%= f.submit "Add cocktail", class: "btn add" %>
  <% end %>
</div>

