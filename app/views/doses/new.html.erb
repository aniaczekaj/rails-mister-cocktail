<div class='container'>
  <%= simple_form_for [@cocktail, @dose] do |f|%>
    <% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Choose an ingredient"%>
    </div>
    <div class="form-group">
      <%= f.input :description, class: "form-control input" %>
    </div>

    <%= f.submit "Add recipe", class: "btn add" %>
  <% end %>
</div>
